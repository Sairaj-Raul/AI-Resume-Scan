{
  "compilerOptions": {
    "target": "ES2020", // Slightly lower target for better compatibility
    "module": "commonjs",
    "moduleResolution": "node", // <-- Ensure Node-style resolution
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true, // <-- Important for compatibility with some ESModules
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true, // Enables all strict checks (best practice)
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
